{
  "name": "bundler",
  "version": "1.4.8",
  "scripts": {
    "dev": "webpack serve -c config/dev.js",
    "build": "webpack -c config/build.js",
    "prod": "webpack --node-env hash -c config/prod.js",
    "watch": "webpack --watch -c config/dev.js",
    "es-lint": "eslint ./src",
    "es-lint:fix": "eslint ./src --fix --max-warnings=0 --color",
    "prettier:fix": "prettier ./src/**/*.{html,ejs,scss,css,json,js} --write",
    "style-lint:fix": "stylelint ./src/**/*.scss --fix"
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "browserslist": [
    "last 3 version",
    "> 1%",
    "not IE >= 0"
  ],
  "sideEffects": [
    "*.js",
    "*.css",
    "*.scss",
    "*.html"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tigranmogrov/bundler.git"
  },
  "author": "Tigran Mogrov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tigranmogrov/bundler/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.20.2",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "fs": "^0.0.2",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.5",
    "path": "^0.12.7",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.1.0",
    "postcss-normalize-charset": "^5.1.0",
    "postcss-preset-env": "^8.0.1",
    "prettier": "^2.8.7",
    "sass": "^1.60.0",
    "sass-loader": "^13.2.1",
    "stylelint": "^15.3.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-order": "^6.0.3",
    "terser-webpack-plugin": "^5.3.7",
    "uglify-js": "^3.17.4",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "body-scroll-lock": "^3.1.5",
    "include-media": "^2.0.0",
    "swiper": "^9.3.2"
  }
}
